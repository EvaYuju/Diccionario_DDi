<Window x:Class="Diccionario_DDi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diccionario_DDi"
        mc:Ignorable="d"
        Title="MainWindow" Height="317" Width="389">
    <Grid Margin="0,0,25,13">
        <TabControl Margin="0,0,-24,-10">
            <TabItem Header="Inglés-Español">
                <Grid>
                    <!-- añadir elementos para pestaña-->
                    <Label x:Name="labelInglés"  Style="{StaticResource Etiquetas1}" Content="Inglés" Margin="56,24,0,0" Width="68" Height="30" VerticalAlignment="Top"/>
                    <Label x:Name="labelTraduccion" Style="{StaticResource CuedroNegro}" Content="Traducción" Margin="56,135,0,0" VerticalAlignment="Top" Width="135" FontFamily="Segoe UI"/>
                    <Button x:Name="btnTraducir" Style="{StaticResource ButtonStyle}" Content="Español" HorizontalAlignment="Left" Margin="222,135,0,0" VerticalAlignment="Top" Height="31" Width="93" Click="Button_Click"/>
                    <TextBox x:Name="txtBoxEscribir" Style="{StaticResource Etiquetas2}" Margin="56,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Height="23" AutomationProperties.HelpText="Escriba una palabra en inglés"/>
                 
                </Grid>

                </WrapPanel>

            </TabItem>
            <TabItem Header="Español-Inglés">

            </TabItem>
            <TabItem Header="Juego">

            </TabItem>
            <TabItem Header="Listado ordenado">

            </TabItem>

        </TabControl>

    </Grid>
</Window>
